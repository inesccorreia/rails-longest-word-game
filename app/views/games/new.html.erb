<h1>New Game</h1>
<% @letters.each do |letter| %>
<%= letter %>
<% end  %>

<p>What is the longest word you can find?</p>

<form action="/score" method="post" data-turbo="false" class="input-group mb-3">
  <input type="text" name="word" class="form-control">
  <input type="submit" class="btn btn-outline-primary" id="button-addon2" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>
